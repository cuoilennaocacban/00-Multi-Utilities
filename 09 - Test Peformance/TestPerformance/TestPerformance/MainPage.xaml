<Page x:Class="TestPerformance.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="using:TestPerformance"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button Width="150"
                    Margin="4"
                    Content="String test" 
                    Click="StringTestButton_OnClick"/>
            <Button Width="150"
                    Margin="4"
                    Content="Loop and Linq test" 
                    Click="LoopAndLinqButton_OnClick"/>
            <Button Width="150"
                    Margin="4"
                    Content="Try catch test" 
                    Click="TryCatButon_OnClick"/>
        </StackPanel>
    </Grid>
</Page>
